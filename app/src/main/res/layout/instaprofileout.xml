<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:translationY="0.52dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomsheetbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Select"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/dismiss"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-40dp"
                android:src="@drawable/ic_clear_white_24dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_marginTop="10dp"
            android:background="#C3C3C3" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:animateLayoutChanges="true"
            android:fadeScrollbars="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:scrollbarThumbVertical="@drawable/scrollbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        tools:src="@color/colorPrimary"/>

                        <Button
                            android:id="@+id/btnDownloadProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Profile Photo"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="@drawable/btnbg"
                            android:layout_gravity="center"/>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_marginTop="7dp"
                    android:background="#C3C3C3" />

                <TextView
                    android:id="@+id/storyTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Stories of Bhavik Maradiya"
                    android:textAlignment="textStart"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@android:style/TextAppearance.WindowTitle"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/insta_main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical"
                    android:padding="5dp">


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loginLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="50dp">

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login to See Stories"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@drawable/ic_instagram"
                        android:textSize="17sp"
                        android:background="@drawable/instabackground"/>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/fab"
                android:drawableStart="@drawable/ic_file_download_white_24dp"
                android:drawableLeft="@drawable/ic_file_download_white_24dp"
                android:padding="10dp"
                android:text="Download All"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>